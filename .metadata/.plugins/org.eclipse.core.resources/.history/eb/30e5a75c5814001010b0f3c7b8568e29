package ejsBasicos;

import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class Calculadora {
	static double num1 = 0;
	static String operador = "";
	
    public static void main(String[] args) {
        JFrame frame = new JFrame("Calculadora");
        frame.setSize(400, 500);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        frame.setLocationRelativeTo(null);

        JTextField pantalla = new JTextField();
        pantalla.setEditable(false);
        frame.add(pantalla, BorderLayout.NORTH);
        
        JTextField emes = new JTextField();
        pantalla.setEditable(false);
        frame.add(emes, BorderLayout.NORTH);

        JPanel panel = new JPanel();
        panel.setLayout(new GridLayout(6, 4, 10, 10));

        String[] botones = {
        	"%","√","x²","1/x",
        	"CE","C","⌫","/",
            "7", "8", "9", "X",
            "4", "5", "6", "-",
            "1", "2", "3", "+",
            "±", "0", ",", "="
        };


        for (String texto : botones) {
            JButton btn = new JButton(texto);
            btn.setBackground(Color.WHITE);
            
            btn.addActionListener(new ActionListener() {
                public void actionPerformed(ActionEvent e) {
                    String comando = e.getActionCommand();

                    if ("0123456789.".contains(comando)) {
                        pantalla.setText(pantalla.getText() + comando);
                    } else if ("+-X/".contains(comando)) {
                            num1 = Double.parseDouble(pantalla.getText());
                            operador = comando;
                            pantalla.setText("");
                    } else if (comando.equals("=")) {
                            double num2 = Double.parseDouble(pantalla.getText());
                            double resultado = 0;
                            switch (operador) {
                                case "+": resultado = num1 + num2; break;
                                case "-": resultado = num1 - num2; break;
                                case "X": resultado = num1 * num2; break;
                                case "/": resultado = num1 / num2; break;
                            }
                            pantalla.setText(String.valueOf(resultado));

                    } else if (comando.equals("C") || comando.equals("CE")) {
                        pantalla.setText("");
                        num1 = 0;
                        operador = "";
                    }
                }
            });
            panel.add(btn);
        }

        frame.add(panel, BorderLayout.SOUTH);
        frame.setVisible(true);
    }
}
