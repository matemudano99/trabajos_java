package ejsBasicos;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.util.Random;

import javax.swing.*;

public class NumerosAleatorios {
    public static void main(String[] args) {
        JFrame frame = new JFrame();
        frame.setSize(250, 100);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        JPanel panel = new JPanel();
        frame.add(panel);

        JTextField num1textField = new JTextField(5);
        panel.add(num1textField);

        JTextField num2textField = new JTextField(5);
        panel.add(num2textField);

        JButton boton = new JButton("Mostrar Números");
        panel.add(boton);

        boton.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                try {
                    String num1Str = num1textField.getText();
                    int num1 = Integer.parseInt(num1Str);

                    String num2Str = num2textField.getText();
                    int num2 = Integer.parseInt(num2Str);
                    
                    Random rd = new Random();
                    rd.nextDouble(num1,num2);
                    
                    System.out.println("numero aleatorio: "+rd);
                    
                    JOptionPane.showMessageDialog(frame, "Números: " + num1 + " y " + num2);
                } catch (NumberFormatException ex) {
                    JOptionPane.showMessageDialog(frame, "Por favor ingresa solo números.");
                }
            }
        });

        frame.setVisible(true);
    }
}
