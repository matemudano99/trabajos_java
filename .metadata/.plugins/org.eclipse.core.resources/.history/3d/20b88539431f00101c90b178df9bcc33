package actividad_evaluable;

public class Usuario {
	private String nombre;
	private String apellidos;
	private Genero genero;
	private String usuario;
	private String telefono;
	private String destino;
	private String[] vacunas;

	public Usuario(String nombre, String apellidos, Genero genero, String usuario, String telefono, String destino, String[] vacunas) {
		this.nombre = nombre;
		this.apellidos = apellidos;
		this.genero = genero;
		this.usuario = usuario;
		this.telefono = telefono;
		this.destino = destino;
		this.vacunas = vacunas;
	}

	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		sb.append("Nombre: ").append(nombre).append("\n");
		sb.append("Apellidos: ").append(apellidos).append("\n");
		sb.append("Género: ").append(genero).append("\n");
		sb.append("Usuario: ").append(usuario).append("\n");
		sb.append("Teléfono: ").append(telefono).append("\n");
		sb.append("Destino: ").append(destino).append("\n");
		sb.append("Vacunas: ");
		for (String vacuna : vacunas) {
			sb.append(vacuna).append(" ");
		}
		return sb.toString();
	}
}
