package files;

import java.io.File;
import java.io.IOException;

public class Main {
	public static void main(String[] args) {
		
		String userHome = System.getProperty("user.home");
		String rutaEscritorio = userHome + "/Desktop";
		
		File dir1 = new File(rutaEscritorio+"/ups");
		File file1 = new File(rutaEscritorio+"/ups/programa.py");
		if (dir1.mkdir()) {
			System.out.println("directorioSimple creado con Ã©xito.");
			file1.renameTo(new File("programa"));
		} else {
			System.out.println("No se pudo crear directorioSimple.");
		}
	}
}