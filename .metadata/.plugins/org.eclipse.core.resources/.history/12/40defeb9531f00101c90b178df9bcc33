package files;

import java.io.File;
import java.io.IOException;

public class Main {
	public static void main(String[] args) throws IOException {
		
		String userHome = System.getProperty("user.home");
		String rutaEscritorio = userHome + "/Desktop";
		
		File dir1 = new File(rutaEscritorio+"/ups");
		File file1 = new File(rutaEscritorio+"/ups/programa.py");
		dir1.mkdir();
		file1.createNewFile();
		
		file1.renameTo(new File("archivo.py"));
	}
}